rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to all collections for the app to function.
    // In a real production environment, you would want to implement more granular
    // security rules, likely based on user authentication and roles.
    
    match /pacientes/{document=**} {
      allow read, write: if true;
    }
    
    match /medicos/{document=**} {
      allow read, write: if true;
    }
    
    match /enfermeiros/{document=**} {
      allow read, write: if true;
    }

    match /departamentos/{document=**} {
      allow read, write: if true;
    }
    
    match /filaDeEspera/{document=**} {
      allow read, write: if true;
    }
    
    match /chamadas/{document=**} {
      allow read, write: if true;
    }
    
    match /counters/{document=**} {
      allow read, write: if true;
    }
    
    match /relatorios_atendimentos/{document=**} {
      allow read, write: if true;
    }
  }
}
