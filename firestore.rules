rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral para permitir leitura e escrita em todas as coleções.
    // Em um ambiente de produção, é altamente recomendável definir
    // regras mais granulares e seguras para cada coleção.
    match /pacientes/{pacienteId} {
      allow read, write: if true;
    }
     match /medicos/{medicoId} {
      allow read, write: if true;
    }
     match /enfermeiros/{enfermeiroId} {
      allow read, write: if true;
    }
     match /departamentos/{deptoId} {
      allow read, write: if true;
    }
    match /filaDeEspera/{filaId} {
      allow read, write: if true;
    }
    match /chamadas/{chamadaId} {
       allow read, write: if true;
    }
    match /counters/{counterId} {
       allow read, write: if true;
    }
    match /relatorios_atendimentos/{relatorioId} {
       allow read, write: if true;
    }
  }
}
