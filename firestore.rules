rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para Pacientes
    match /pacientes/{pacienteId} {
      allow read, write: if true; 
    }

    // Regras para Médicos
    match /medicos/{medicoId} {
      allow read, write: if true;
    }

    // Regras para Enfermeiros
    match /enfermeiros/{enfermeiroId} {
      allow read, write: if true;
    }

    // Regras para Departamentos
    match /departamentos/{departamentoId} {
      allow read, write: if true;
    }

    // Regras para a Fila de Espera
    match /filaDeEspera/{filaId} {
      allow read, write: if true;
    }
    
    // Regras para as Chamadas do Painel
    match /chamadas/{chamadaId} {
        allow read, write: if true;
    }

    // Regras para Contadores
    match /counters/{counterId} {
      allow read, write: if true;
    }

    // Regras para Relatórios de Atendimentos
    match /relatorios_atendimentos/{relatorioId} {
      allow read, write: if true;
    }
  }
}
