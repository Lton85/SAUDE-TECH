rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Permitir acesso total (leitura, escrita, atualização, exclusão) a todas as coleções.
    // Em um ambiente de produção, você deve restringir essas regras para garantir a segurança dos dados.
    match /{document=**} {
      allow read, write: if true;
    }

    // Regras específicas para cada coleção (exemplo de como poderia ser mais granular)
    match /pacientes/{pacienteId} {
      allow read, write: if true;
    }

    match /medicos/{medicoId} {
      allow read, write: if true;
    }

    match /enfermeiros/{enfermeiroId} {
      allow read, write: if true;
    }

    match /departamentos/{departamentoId} {
      allow read, write: if true;
    }

    match /filaDeEspera/{filaId} {
      allow read, write: if true;
    }

    match /chamadas/{chamadaId} {
      allow read, write: if true;
    }

    match /counters/{counterId} {
      allow read, write: if true;
    }
    
    match /relatorios_atendimentos/{relatorioId} {
        allow read, write: if true;
    }
  }
}
