
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Permite leitura e escrita em todas as coleções para desenvolvimento
    // ATENÇÃO: Para produção, restrinja estas regras.
    match /{document=**} {
      allow read, write: if true;
    }

    // Regras específicas por coleção (exemplo mais seguro para o futuro)
    match /pacientes/{pacienteId} {
      allow read, write: if true; // Em produção: if request.auth != null;
    }

    match /medicos/{medicoId} {
      allow read, write: if true; // Em produção: if request.auth != null;
    }

    match /enfermeiros/{enfermeiroId} {
      allow read, write: if true; // Em produção: if request.auth != null;
    }

    match /departamentos/{departamentoId} {
      allow read, write: if true; // Em produção: if request.auth != null;
    }

    match /filaDeEspera/{filaId} {
      allow read, write: if true; // Em produção: if request.auth != null;
    }

    match /relatorios_atendimentos/{relatorioId} {
      allow read, write: if true; // Em produção: if request.auth != null;
    }

    match /chamadas/{chamadaId} {
      // O painel precisa de acesso público para leitura
      allow read: if true;
      allow write: if true; // Em produção: if request.auth != null;
    }

    match /counters/{counterId} {
      allow read, write: if true; // Em produção: if request.auth != null;
    }
  }
}
