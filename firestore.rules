
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral: permite leitura e escrita em todas as coleções por padrão.
    // Para um ambiente de produção, é altamente recomendável restringir
    // o acesso a usuários autenticados e validar os dados.
    match /{document=**} {
      allow read, write: if true;
    }

    // Regras específicas por coleção
    match /pacientes/{pacienteId} {
      allow read, write: if true;
    }

    match /medicos/{medicoId} {
      allow read, write: if true;
    }

    match /enfermeiros/{enfermeiroId} {
      allow read, write: if true;
    }

    match /departamentos/{departamentoId} {
      allow read, write: if true;
    }

    match /filaDeEspera/{filaId} {
      allow read, write: if true;
    }
    
    match /relatorios_atendimentos/{relatorioId} {
      allow read, write: if true;
    }

    match /chamadas/{chamadaId} {
      allow read, write: if true;
    }

    match /counters/{counterId} {
      allow read, write: if true;
    }
  }
}
